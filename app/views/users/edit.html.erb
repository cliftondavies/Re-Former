<h1>Update Details</h1>

<%= form_for @user, url: edit_user_path(@user) do |f| %>
  <div>
    <%= f.label :username, "Username:" %><br>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, placeholder: "name@example.com" %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Sign Up" %>
<% end %>